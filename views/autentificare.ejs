<% if(utilizator != null) { %>
    <div class="welcome_container">
        <p id="welcome_message">Logat ca
            <%- utilizator %>.
        </p>
    </div>
    <% }
if(mesajEroare != null) {%>
        <p>
            <%- mesajEroare %>
        </p>
        <% } %>
            <div class="auth_input_container">
                <form class="auth_form" action="/verificare-autentificare" method="post">
                    <div class="auth_block">
                        <label>Utilizator:</label>
                        <input type="text" placeholder="Introduceti utilizatorul" name="nume_utilizator" required>
                    </div>
                    <div class="auth_block">
                        <label>Parola:</label>
                        <input type="password" placeholder="Introduceti parola" name="parola_utilizator" required>
                    </div>
                    <div class="auth_block">
                        <input class="button" type="submit" value="Autentificare">
                    </div>
                </form>
            </div>